<Application x:Class="DoctorApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DoctorApplication"
             xmlns:viewModel="clr-namespace:DoctorApplication.MVVM.ViewModel"
             xmlns:view="clr-namespace:DoctorApplication.MVVM.View"
             
             Startup="ApplicationStart">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/UIColors.xaml" />
                <ResourceDictionary Source="Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:DataViewModel}">
                <view:DataView/>
            </DataTemplate>
            <ResourceDictionary x:Key="Style" Source="/Styles/UIColors.xaml" />

            <!--<DataTemplate DataType="{x:Type viewModel:DataViewModel}">
                <view:DataView/>
            </DataTemplate>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
